    echo -e "${PURPLE}ðŸŒ SELECT MINING POOL - LUCKPOOL & VIPOR NETWORK${NC}"
    echo -e "${CYAN}â”Œâ”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”${NC}"
    echo -e "${CYAN}â”‚ ${YELLOW}LUCKPOOL NETWORK${NC}                               ${CYAN}â”‚${NC}"
    echo -e "${CYAN}â”‚ ${GREEN}1. Europe (EU)${NC}     - eu.luckpool.net:3960      ${CYAN}â”‚${NC}"
    echo -e "${CYAN}â”‚ ${GREEN}2. Asia (SG)${NC}       - sg.luckpool.net:3960      ${CYAN}â”‚${NC}"
