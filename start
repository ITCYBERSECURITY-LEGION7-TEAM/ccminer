#!/bin/bash

# Colors for UI
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
BLUE='\033[0;34m'
PURPLE='\033[0;35m'
NC='\033[0m' # No Color

# Config paths
CCMINER_PATH="$HOME/ccminer"
CONFIG_FILE="$CCMINER_PATH/config.json"
CCMINER_BIN="$CCMINER_PATH/ccminer"

# Global variables
WALLET_ADDRESS=""
WORKER_NAME=""
CPU_USAGE=""
SELECTED_POOL=""
POOL_NAME=""

# Function to display hacker animation with percentage
hacker_animation() {
    local progress=$1
    local task_name=$2
    local width=50
    local filled=$((width * progress / 100))
    local empty=$((width - filled))
    
    # Hacker-style random characters
    hacker_chars=("0101" "0110" "1010" "1100" "0011" "1001" "0110" "1011" "1101" "1110")
    random_char1=${hacker_chars[$RANDOM % ${#hacker_chars[@]}]}
    random_char2=${hacker_chars[$RANDOM % ${#hacker_chars[@]}]}
    
    printf "\r${CYAN}[${GREEN}"
    for ((i=0; i<filled; i++)); do
        printf "â–ˆ"
    done
    printf "${CYAN}"
    for ((i=0; i<empty; i++)); do
        printf "â–’"
    done
    printf "${CYAN}] ${progress}%% ${PURPLE}${task_name} ${YELLOW}[${random_char1}:${random_char2}]${NC}"
}

# Function to simulate loading with hacker style
simulate_hacker_loading() {
    local task_name=$1
    local duration=$2
    
    echo -e "${BLUE}â–¶ INITIATING: ${task_name}...${NC}"
    echo
    
    for i in $(seq 1 100); do
        hacker_animation $i "$task_name"
        sleep $(echo "scale=3; $duration/100" | bc -l 2>/dev/null || echo "0.01")
    done
    echo -e "\n${GREEN}âœ“ COMPLETED: ${task_name}${NC}\n"
}

# Function to display advanced hacker banner
display_banner() {
    clear
    echo -e "${GREEN}"
    # ASCII Art yang lebih kompatibel
    echo "  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ•—   â–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•— "
    echo " â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ–ˆâ–ˆâ•— â–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â•â•â•â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—"
    echo " â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•”â–ˆâ–ˆâ–ˆâ–ˆâ•”â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â–ˆâ–ˆâ•— â–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—  â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•"
    echo " â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘     â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â•šâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•”â•â•â•  â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—"
    echo " â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â•šâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘ â•šâ•â• â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘â–ˆâ–ˆâ•‘ â•šâ–ˆâ–ˆâ–ˆâ–ˆâ•‘â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘"
    echo "  â•šâ•â•â•â•â•â• â•šâ•â•â•â•â•â•â•šâ•â•     â•šâ•â•â•šâ•â•â•šâ•â•  â•šâ•â•â•â•â•šâ•â•â•â•â•â•â•â•šâ•â•  â•šâ•â•"
    echo -e "${CYAN}=================================================${NC}"
    echo -e "${YELLOW}          ADVANCED MINING LAUNCHER v2.0${NC}"
    echo -e "${CYAN}=================================================${NC}"
    echo
}

