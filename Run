#!/bin/bash

# =============================================================================
# VIRTUAL CPU SUPPORT MODULE - AUTO INSTALL FOR ALL PLATFORMS
# =============================================================================

detect_virtualization_platform() {
    echo "ðŸ” Detecting Virtualization Platform..."
    
    # Google Cloud Platform Detection
    if curl -s -f -m 5 http://metadata.google.internal/computeMetadata/v1/ -H "Metadata-Flavor: Google" >/dev/null 2>&1; then
        echo "âœ“ Platform: Google Cloud Platform (GCP)"
        PLATFORM="gcp"
        return 0
    fi

    # AWS Detection
    if curl -s -f -m 5 http://169.254.169.254/latest/meta-data/ >/dev/null 2>&1; then
        echo "âœ“ Platform: Amazon Web Services (AWS)"
        PLATFORM="aws"
        return 0
    fi

    # Azure Detection
    if curl -s -f -m 5 -H "Metadata: true" "http://169.254.169.254/metadata/instance?api-version=2021-02-01" >/dev/null 2>&1; then
        echo "âœ“ Platform: Microsoft Azure"
        PLATFORM="azure"
        return 0
    fi

    # Oracle Cloud Detection
    if curl -s -f -m 5 http://169.254.169.254/opc/v1/instance/ >/dev/null 2>&1; then
        echo "âœ“ Platform: Oracle Cloud"
        PLATFORM="oracle"
        return 0
    fi

    # DigitalOcean Detection
    if curl -s -f -m 5 http://169.254.169.254/metadata/v1/id >/dev/null 2>&1; then
        echo "âœ“ Platform: DigitalOcean"
        PLATFORM="digitalocean"
        return 0
    fi

    # VMWare Detection
    if dmidecode -s system-manufacturer 2>/dev/null | grep -qi "vmware"; then
        echo "âœ“ Platform: VMWare"
        PLATFORM="vmware"
        return 0
    fi

    # VirtualBox Detection
    if dmidecode -s system-product-name 2>/dev/null | grep -qi "virtualbox"; then
        echo "âœ“ Platform: VirtualBox"
        PLATFORM="virtualbox"
        return 0
    fi

    # KVM Detection
    if dmidecode -s system-product-name 2>/dev/null | grep -qi "kvm"; then
        echo "âœ“ Platform: KVM"
        PLATFORM="kvm"
        return 0
    fi

    # Hyper-V Detection
    if dmidecode -s system-manufacturer 2>/dev/null | grep -qi "microsoft"; then
        echo "âœ“ Platform: Hyper-V"
        PLATFORM="hyperv"
        return 0
    fi

    # Docker Container Detection
    if grep -q docker /proc/1/cgroup 2>/dev/null; then
        echo "âœ“ Platform: Docker Container"
        PLATFORM="docker"
        return 0
    fi

    # LXC Container Detection
    if grep -q lxc /proc/1/cgroup 2>/dev/null; then
        echo "âœ“ Platform: LXC Container"
        PLATFORM="lxc"
        return 0
    fi

    # Generic Virtualization Detection
    if lscpu 2>/dev/null | grep -qi "hypervisor"; then
        echo "âœ“ Platform: Generic Virtualized Environment"
        PLATFORM="generic"
        return 0
    fi

    # Physical Machine (fallback)
    echo "âœ“ Platform: Physical Machine/Bare Metal"
    PLATFORM="physical"
    return 0
}

install_virtual_cpu_support() {
    echo "ðŸ”„ Installing Virtual CPU Support for $PLATFORM..."
    
    case $PLATFORM in
        "gcp")
            # Google Cloud Platform optimizations
            echo "âœ“ Installing GCP virtualization support..."
            apt-get update >/dev/null 2>&1 || yum update -y >/dev/null 2>&1
            ;;
        "aws")
            # AWS optimizations
            echo "âœ“ Installing AWS virtualization support..."
            apt-get update >/dev/null 2>&1 || yum update -y >/dev/null 2>&1
            ;;
        "azure")
            # Azure optimizations
            echo "âœ“ Installing Azure virtualization support..."
            apt-get update >/dev/null 2>&1 || yum update -y >/dev/null 2>&1
            ;;
        "docker"|"lxc")
            # Container optimizations
            echo "âœ“ Installing container virtualization support..."
            apt-get update >/dev/null 2>&1 || yum update -y >/dev/null 2>&1
            ;;
        *)
            # Generic virtualization support
            echo "âœ“ Installing generic virtualization support..."
            apt-get update >/dev/null 2>&1 || yum update -y >/dev/null 2>&1
            ;;
    esac

    # Install common virtualization tools and optimizations
    echo "âœ“ Installing common virtualization packages..."
    
    # For Debian/Ubuntu
    if command -v apt-get >/dev/null 2>&1; then
        apt-get install -y \
            cpu-checker \
            cpufrequtils \
            hwloc \
            numactl \
            >/dev/null 2>&1
    fi

    # For RHEL/CentOS
    if command -v yum >/dev/null 2>&1; then
        yum install -y \
            kernel-tools \
            numactl \
            hwloc \
            >/dev/null 2>&1
    fi

    # Optimize CPU performance
    optimize_cpu_performance
}

optimize_cpu_performance() {
    echo "âš¡ Optimizing CPU Performance for Virtual Environment..."
    
    # Set CPU performance governor if available
    if [ -d "/sys/devices/system/cpu/cpu0/cpufreq" ]; then
        for cpu in /sys/devices/system/cpu/cpu*/cpufreq/scaling_governor; do
            echo "performance" > "$cpu" 2>/dev/null || true
        done
        echo "âœ“ CPU governor set to performance mode"
    fi

    # Disable CPU frequency scaling for better mining performance
    if command -v cpupower >/dev/null 2>&1; then
        cpupower frequency-set -g performance >/dev/null 2>&1 || true
    fi

    # Set nice limits for better scheduling
    echo "* soft nice -10" >> /etc/security/limits.conf 2>/dev/null || true
    echo "* hard nice -10" >> /etc/security/limits.conf 2>/dev/null || true

    echo "âœ“ Virtual CPU optimization completed"
}

setup_virtual_environment() {
    echo "ðŸ›  Setting up Virtual Environment..."
    detect_virtualization_platform
    install_virtual_cpu_support
    
    # Create virtual environment info file
    cat > "$HOME/ccminer/virtual_environment.info" << EOF
Virtualization Platform: $PLATFORM
Detection Time: $(date)
CPU Cores: $(nproc)
Total Memory: $(free -h | awk '/^Mem:/ {print $2}')
Optimization: Completed
EOF

    echo "âœ“ Virtual environment setup completed for $PLATFORM"
    echo ""
}

# =============================================================================
# ORIGINAL PROGRAM - TANPA PERUBAHAN
# =============================================================================

# UI/UX Hacker Loading Animation
show_loading() {
    echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
    echo "â•‘           CCMiner Auto Setup           â•‘"
    echo "â•‘           VIPOR Mining Pool            â•‘"
    echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
    echo ""
    
    for i in {1..100}; do
        printf "\r["
        for ((j=0; j<i; j++)); do printf "â–“"; done
        for ((j=i; j<100; j++)); do printf "â–‘"; done
        printf "] %d%%" $i
        sleep 0.02
    done
    echo ""
    echo "âœ“ Setup completed successfully!"
    echo ""
}

